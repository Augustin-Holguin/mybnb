<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <br>
    
    <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary-fb" %>
    
    <br><br>
    
    <center>or</center>
    
    <hr>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devise_errors' %>
      
      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Fullname" %>
      </div>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
      </div>
    
      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Create a password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
